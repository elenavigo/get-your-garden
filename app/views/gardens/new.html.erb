<div class="container">
  <div class="col-10 offset-1 col-md-8 offset-md-2">
    <h1 class="h1-fat-green">Create your Garden</h1>
    <%= simple_form_for @garden do |f| %>
    <%= f.input :title, class: 'form-control' %>
    <%= f.input :description, class: 'form-control' %>
    <%= f.input :location, class: 'form-control' %>
    <%= f.input :price, class: 'form-control'%>
    <%= f.input :capacity, class: 'form-control' %>
    <%= f.input :barbecue, class: 'form-control' %>
    <%= f.input :pool, class: 'form-control' %>
    <%= f.input :green_area, class: 'form-control' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, class: 'form-control' %>
    <%= f.submit "Create new Garden", class: "btn btn-success w-100"%>
    <% end %>
  </div>
</div>
</div>




